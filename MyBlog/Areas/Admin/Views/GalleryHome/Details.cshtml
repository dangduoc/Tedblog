@model MyBlog.Models.GalleryHome

@{
    Layout = null;
}

@section CurrentPage{
    <i class="fa fa-angle-right"></i>
    <span>Gallery ảnh trang chủ</span>
    <i class="fa fa-angle-right"></i>
    <span>Chi tiết</span>
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Đường dẫn
            </dt>

            <dd>
                @{
                    string str = Model.url + "_b.jpg";
                }
                <img src="@str" />
            </dd>

            <dt>
                Tiêu đề
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                Ngày tạo
            </dt>

            <dd>
                @Html.DisplayFor(model => model.dateCreate)
            </dd>

        </dl>

    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    </p>