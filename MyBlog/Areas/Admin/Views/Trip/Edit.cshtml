@model MyBlog.Models.Trip

@section CurrentPage{
    <i class="fa fa-angle-right"></i>
    <span>Những chuyến đi</span>
    <i class="fa fa-angle-right"></i>
    <span>Sửa</span>
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.postID)
    
            <div class="form-group">
                <p class="control-label col-md-2">Mã người viết</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.userID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userID, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Tiêu đề</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.postTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.postTitle, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Tóm tắt</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.postSummary, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.postSummary, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Ngày viết</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Nội dung</p>
                <div class="col-md-10" style="height:300px;overflow:auto">
                    @Html.TextAreaFor(model => model.postContent, new { htmlAttributes = new { @class = "form-control", type="textarea" } })
                    @Html.ValidationMessageFor(model => model.postContent, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Bạn bè</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.friends, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.friends, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Thumbnail</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.imgThumbnail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.imgThumbnail, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Link folder ảnh</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.imageFolder, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.imageFolder, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Meta Image</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.metaImage, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.metaImage, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Meta Description</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.metaDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.metaDescription, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
