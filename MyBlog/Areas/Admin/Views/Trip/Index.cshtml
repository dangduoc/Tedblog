@model IEnumerable<MyBlog.Models.Trip>

@section CurrentPage{
    <i class="fa fa-angle-right"></i>
    <span>Những chuyến đi</span>
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <table class="table container">
        <tr>
            <th>
                Tiêu đề
            </th>
            <th>
                Tóm tắt
            </th>
            <th>
                Ngày viết
            </th>
            <th>
                Bạn bè
            </th>
            <th>
                Folder ảnh
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                <a href="/FriendsAndMe/Trip?id=@item.postID" target="_blank">@Html.DisplayFor(modelItem => item.postTitle)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postSummary)
            </td>
            <td>
                @item.date.Value.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.friends)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.imageFolder)">Xem</a> 
            </td>
            <td style="min-width:200px">
                @Html.ActionLink("Edit", "Edit", new { id=item.postID }) |
                @Html.ActionLink("Details", "Details", new { id=item.postID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.postID })
            </td>
        </tr>
    }
    </table>