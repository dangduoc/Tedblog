@model MyBlog.Models.DailyPost

@section CurrentPage{
    <i class="fa fa-angle-right"></i>
    <span>Bài viết</span>
    <i class="fa fa-angle-right"></i>
    <span>Chi tiết bài viết</span>
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <div>
        <dl class="dl-horizontal">
            <dt>
                Tiêu đề
            </dt>
    
            <dd>
                <a href="/DailyPost/Post?id=@Model.postID" target="_blank">@Html.DisplayFor(model => model.postTitle)</a>
            </dd>
    
            <dt>
                Nội dung
            </dt>
    
            <dd>
                @Html.Raw(Model.postContent)
            </dd>
    
            <dt>
                Ngày tạo
            </dt>
    
            <dd>
                @Model.dateWrite.ToShortDateString()
            </dd>
            <dt>
                Ảnh hiển thị
            </dt>

            <dd>
                <img src="@Model.metaImage" class="img-responsive" style="max-height:200px"/>
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.postID }) |
    </p>
