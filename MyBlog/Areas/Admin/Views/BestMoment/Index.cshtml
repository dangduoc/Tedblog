@model IEnumerable<MyBlog.Models.BestMoment>

@section CurrentPage{
    <i class="fa fa-angle-right"></i>
    <span>Gallery</span>
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <table class="table">
        <tr>
            <th>
                Mã người tạo
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Ảnh hiển thị
            </th>
            <th>
                Tóm tắt nội dung
            </th>
            <th>
                Tiêu đề
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_create)
            </td>
            <td>
                <img src="@item.Image" style="max-height:150px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td style="min-width:200px">
                @Html.ActionLink("Edit", "Edit", new { id=item.momentID }) |
                @Html.ActionLink("Details", "Details", new { id=item.momentID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.momentID })
            </td>
        </tr>
    }
    
    </table>