@model MyBlog.Models.DailyPost

@section CurrentPage{
    <i class="fa fa-angle-right"></i>
    <span>Bài viết</span>
    <i class="fa fa-angle-right"></i>
    <span>Sửa</span>
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.postID)
    
            <div class="form-group">
                <p class = "control-label col-md-2">Tiêu đề bài viết</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.postTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.postTitle, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Nội dung bài viết</p>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.postContent, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.postContent, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <p class="control-label col-md-2">Ngày viết</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.dateWrite, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dateWrite, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <p class="control-label col-md-2">Ảnh hiển thị</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.metaImage, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.metaImage, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-default" />
                </div>
            </div>
        </div>
    }