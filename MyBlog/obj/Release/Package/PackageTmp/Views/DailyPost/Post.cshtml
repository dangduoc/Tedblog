@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MyBlog.Models.DailyPost
 @{
            var str = "http://dangduoc.azurewebsites.net/DailyPost/Post?id=" + Model.postID;
       
        }
<link href="~/Content/stylePost.css" rel="stylesheet" />
<div class="Container" style="padding: 0px; color: black; margin-top: 50px;">
    <div clas="row" style="height: 100vh; width: 100%; overflow: auto">
        <div class="col-sm-5" id="left-post" style="position: relative; overflow: hidden;">
            <img class="img-responsive" src='@Url.Content("~/Content/images/me.jpg")' />
            <div class="inside-img text-center">
                <div class="title-post text-center">
                    <h1>@Model.postTitle</h1>
                    <time>@Model.dateWrite.ToString("MMMM dd,yyyy")</time>
                </div>
            </div>
        </div>
        <div class="col-sm-7" id="right-post" style="color: #303030">
            <article class="post-detail">
                <div class="content-post">
                    <p>
                        @Html.Raw(Model.postContent)
                    </p>
                </div>
            </article>
            <section class="facebook-plugin-daily-post">
                <h2>Comment</h2>        
                <div class="fb-comments" data-href='@str' data-width="100%" data-numposts="5"></div>
            </section>
        </div>
    </div>
</div>
@section meta{
    <meta property="og:site_name" content="Ted's Blog" />
    <meta property="og:url" content='@str' />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="@Model.postTitle" />
    <meta property="og:description" content="@Model.postContent" />
    <meta property="fb:app_id" content="219237851782524" />
    <meta property="og:image" content="@Url.Content("~/Content/images/about_image.png")" />
}