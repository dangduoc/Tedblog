            <div class="item">
                <div class="clearfix" style="max-width: 100%;">
                    <ul id="image-gallery" class="gallery list-unstyled cS-hidden">
                        @foreach(GalleryHome g in ViewBag.Gallery)
                        {
                            string thumb = g.url + "_m.jpg";
                            string url = g.url + "_b.jpg";
                        <li data-thumb="@thumb">
                            <img src="@url" class="img-responsive" />
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row text-left wow slideInLeft data-wow-duration='2s'" style="color: #fff;">
        <div class="col-sm-8 text-left">
            <h1><i class="fa fa-car" aria-hidden="true"></i><a href="/FriendsandMe/Trips">My Trips</a></h1>
            <h2><small>I've had <strong>such great times</strong> with my friends traveled from the top of mountains to the middle of the sea. I will save it as <strong>the best memories</strong>. You can see more and detail of our trips by click the button below</small></h2>
            <a class="btn" href="/FriendsandMe/Trips">View More</a>
        </div>
        <div class="col-sm-4"></div>
    </div>
    <style>
        .item {
            margin-bottom: 60px;
        }

        #content-slider {
            height: 200px;
        }

        .content-slider li {
            height: 100%;
            max-width: 300px;
        }

        .content-slider img {
            max-height: 170px;
        }

        .lSSlideOuter .lSPager.lSpg {
            display: none;
        }
    </style>
    <div class="row" style="color: #fff">
        <div class="item  wow zoomIn" data-wow-duration='5s' data-wow-delay='1s'>
            <ul id="content-slider" class="content-slider">
                @foreach (MyBlog.Models.Trip t in ViewBag.trips)
                {
                    string img = (!String.IsNullOrEmpty(t.imgThumbnail)) ? t.imgThumbnail : "";
                    string title = (!String.IsNullOrEmpty(t.postTitle)) ? t.postTitle : "Title was not set";
                    <li class="recent-post">
                        <img src="@Url.Content(img)" class="img-responsive" style="background-color: black" />
                        <div class="text-center">
                            <a href="/FriendsandMe/Trip/@t.postID.ToString()">
                                <h4 class="text-uppercase">
                                    @title<br />
                                </h4>
                                <small>April 09,2016</small>
                            </a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        $(function () {
            $("#content-slider").lightSlider({
                loop: true,
                keyPress: true
            });
            $('#image-gallery').lightSlider({
                gallery: true,
                item: 1,
                thumbItem: 9,
                slideMargin: 0,
                speed: 500,
                pause: 3000,
                auto: true,
                loop: true,
                onSliderLoad: function () {
                    $('#image-gallery').removeClass('cS-hidden');
                }
            });
        })

    </script>
}
