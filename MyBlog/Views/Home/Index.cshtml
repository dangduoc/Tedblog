        <h1><i class="fa fa-hand-o-right" aria-hidden="true"></i>My Last Post</h1>
        @{
            MyBlogDBModel data = new MyBlogDBModel();
            var last_post = data.DailyPosts.OrderByDescending(p => p.dateWrite).FirstOrDefault();
            <a href="/DailyPost/Post?id=@last_post.postID.ToString()" style="color:black" class="wow slideInLeft data-wow-duration='1s'"><h2>@last_post.postTitle</h2></a>
            <p>
                @Html.Raw(last_post.postContent)
                <footer class="text-right">@last_post.dateWrite.ToString("MMMM dd,yyyy")</footer>
