@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .btn {
        padding: 10px 20px;
        background-color: #333;
        color: #f1f1f1;
        border-radius: 0;
        transition: .2s;
    }

        .btn:hover {
            background-color: #fff;
            color: black;
            border: 1px solid black;
        }

    #about-row {
        height: 300px;
    }

        #about-row > li {
            padding: 0;
            margin: 0;
            height: 100%;
            overflow: hidden;
        }

    #about {
        padding: 30px 120px;
    }

    #aboutme-img {
        width: 100%;
    }

    .img-contact {
        width: 40px;
    }

    @@media (min-width:768px) {
        #about {
            min-width: 1300px;
        }
    }

    @@media (max-width:767px) {
        p {
            font-size: 12px !important;
        }

        h2 {
            font-size: 20px !important;
        }

        h1 {
            font-size: 23px;
        }

        #h1-about {
            font-size: 14px !important;
            margin-bottom: 0px;
        }

        #about {
            padding: 20px 10px;
        }

        #about-row {
            height: 130px;
        }

        .img-contact {
            width: 20px;
        }
       .recent-post{
	position: relative;
	display: block;
	margin-bottom: 20px;
}
.recent-post:hover{
	background-color: rgba(0,0,0,0.5);
}
.recent-post div{
	position: absolute;
	width: 100%;
	height: 100%;
	right: 0;
	top:0;
	opacity: 0;
	background-color: rgba(0,0,0,0.7);
	transition: opacity 0.7s;
	-webkit-transition:opacity 0.7s;
}
.recent-post div a{
	color:#fff !important;
}
.recent-post:hover div{
	opacity: 1;
}
}
    }
</style>

